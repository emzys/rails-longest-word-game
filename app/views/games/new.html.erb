<h1>New game</h1>

<div class="letters">
  <% @letters.each do |letter| %>
    <div class="letter"><%= letter %></div>
  <% end %>
</div>


<form action="/score" method="POST">
  <label for="basic-url">What's the longest word you can find?</label>
  <div class="input-group mb-3">
    <input type="text" name="answer" value="<% params[:answer] %>" placeholder="Your guess..." class="form-control user-input" aria-describedby="button-addon2">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <div class="input-group-append">
      <input class="btn btn-outline-secondary" type="submit" id="button-addon2">
    </div>
  </div>
</form>
